<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>ict.ada</groupId>
	<artifactId>ada-main</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Ada Graph Database</name>
	<modules>
		<module>ada-gdb</module>
		<module>ada-common</module>
		<module>ada-search</module>
		<module>ada-gdb-rest</module>
		<module>ada-gdb-compute</module>
	</modules>

	<!-- common dependencies in all modules -->
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.apache.hadoop</groupId>
				<artifactId>hadoop-core</artifactId>
				<version>1.0.4</version>
				<scope>provided</scope>
				<exclusions>
					<exclusion>
						<groupId>org.codehaus.jackson</groupId>
						<artifactId>jackson-mapper-asl</artifactId>
					</exclusion>
				</exclusions>
			</dependency>
			<dependency>
				<groupId>org.apache.hbase</groupId>
				<artifactId>hbase</artifactId>
				<version>0.94.6</version>
				<scope>provided</scope>
				<exclusions>
					<exclusion>
						<groupId>com.google.protobuf</groupId>
      					<artifactId>protobuf-java</artifactId>
					</exclusion>
				</exclusions>				 
			</dependency>
			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>4.11</version>
				<scope>test</scope>
			</dependency>
		
			<dependency>
				<groupId>com.google.protobuf</groupId>
				<artifactId>protobuf-java</artifactId>
				<version>2.5.0</version>
			</dependency>
			<dependency>
				<groupId>ict.ada</groupId>
				<artifactId>ada-common</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>ict.ada</groupId>
				<artifactId>ada-gdb</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>ict.ada</groupId>
				<artifactId>ada-gdb-rest</artifactId>
				<classifier>classes</classifier>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>ict.ada</groupId>
				<artifactId>ada-search</artifactId>
				<version>${project.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<pluginManagement>
			<plugins>
			<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-surefire-plugin</artifactId>
					<version>2.16</version>
					<configuration>
						<skipTests>false</skipTests><!-- skip test or not in compilation -->
					</configuration>
				</plugin>
				<plugin>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>3.0</version>
					<configuration>
						<source>1.6</source>
						<target>1.6</target>
					</configuration>
				</plugin>
				<plugin>
					<!-- m2e needs configurations below to work properly with maven-dependency-plugin -->
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>org.apache.maven.plugins</groupId>
										<artifactId>maven-dependency-plugin</artifactId>
										<versionRange>[2.5,)</versionRange>
										<goals>
											<goal>copy-dependencies</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<execute/>
									</action>
								</pluginExecution>

							</pluginExecutions>

						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-dependency-plugin</artifactId>
					<version>2.7</version>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<!-- Use our internal repository. If Maven fails to connect to it, it will 
		fall back to Maven Central Repository -->
	<repositories>
		<repository>
			<id>ada-maven-repo</id>
			<name>ada-nexus</name>
			<url>http://10.61.2.145:8081/nexus/content/groups/public</url>
		</repository>
	</repositories>

</project>